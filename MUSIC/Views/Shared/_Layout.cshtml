<style>
    .light-height100{
        line-height:100%;
    }
    .list-bxh{
        position:relative;
    }
    .item-bxh {
        padding: 0;
        background: #f1f1f1;
        margin: 0;
        top:0;
        left:100%;
        width: 150px;
        display:none;
        list-style: none;
        opacity:0;
        position: absolute;
    }
    .list-bxh:hover .item-bxh {
        display: block;
        transition: 0.5s ease-in;
        opacity: 1;
    }
    @*.item-bxh:before{
            content:"";
            position:absolute;
            left:0;
            width:20px;
            height:20px;
            background:#fff;
        }*@
    .item-bxh li {
        padding: 5px 10px;
        color: #f5f5f5;
        left: 0;
        font-size: 15px;
        font-weight: 500;
        opacity: 0.5;
    }
    .item-bxh li:hover {
        color:#4cff00;
        opacity:1;
    }
</style>
