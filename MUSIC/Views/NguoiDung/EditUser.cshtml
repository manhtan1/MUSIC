@model MUSIC.Models.THANHVIEN

@{
    ViewBag.Title = "EditUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="center">
    <h2 class="">Thông tin Tài khoản @Model.TenDN</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="listtt">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.TenDN)

            <div class="">
                @Html.LabelFor(model => model.HoTen, htmlAttributes: new { @class = "text_title" })
                <div class="">
                    @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "textboxdesc" } })
                    @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="mg8px">
                @Html.LabelFor(model => model.DienThoai, htmlAttributes: new { @class = "text_title" })
                <div class="">
                    @Html.EditorFor(model => model.DienThoai, new { htmlAttributes = new { @class = "textboxdesc" } })
                    @Html.ValidationMessageFor(model => model.DienThoai, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="mg8px">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "text_title" })
                <div class="">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "textboxdesc" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                    <input type="submit" value="Lưu Thông Tin" class="btn btn-default" />
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Trở lại trang", "Index")
    </div>
</div>

<style>
    .center{
        text-align:center;
        display:block;
    }
    .listtt{
        display:flex;
        flex-direction:column;
        justify-content:center;
        align-items:center;
    }
    .text_title{
        width:120px;
        font-size:15px;
        font-weight:bold;
    }
    .textboxdesc{
        padding:5px;
    }
    .mg8px{
        margin:8px;
    }
</style>