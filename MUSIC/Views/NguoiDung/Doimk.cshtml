
@{
    ViewBag.Title = "Doimk";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    <div class="auth-wrapper">
        <div class="auth-container">
            <div class="auth-action-left">
                <div class="auth-form-outer">
                    <h2 class="auth-form-title">
                        Đổi mật khẩu
                    </h2>
                    <h4 style="font-size:17px; color:red;">@ViewBag.Thongbao</h4>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <form class="login-form">
                        <div class="input-icon">
                            @Html.Password("mkcu", "", new { placeholder = "Mật khẩu hiện tại" })
                        </div>
                        @ViewData["Loi1"]
                        <div class="input-icon">
                            @Html.Password("Mknew", "", new { placeholder = "Mật khẩu mới" })
                        </div>
                        @ViewData["Loi2"]
                        <div class="footer-action">
                            <input type="submit" value="Đổi" class="auth-submit">
                        </div>
                    </form>
                   
                </div>
            </div>
            <div class="auth-action-right">
                <div class="auth-image">
                    <img src="https://i.pinimg.com/564x/66/1f/87/661f872c7edaa50edd1914d1f1582ffa.jpg" alt="login">
                </div>
            </div>
        </div>
    </div>
}

