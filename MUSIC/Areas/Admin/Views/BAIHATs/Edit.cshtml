@model MUSIC.Models.BAIHAT

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "BAIHATs", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>BAIHAT</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.idbaihat)

    @{
        MUSIC.Models.DBcontent db = new MUSIC.Models.DBcontent();
        var ab = db.ALBUMs.ToList();
        var cs = db.PLAYLISTs.ToList();
        var tl = db.THELOAIs.ToList();
    }
    <div class="fl col-md-10">
        <div class="form-group">
            @Html.LabelFor(model => model.idtheloai, "idtheloai", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                <select name="idtheloai">
                    @foreach (var i in tl)
                    {
                        <option value="@i.idtheloai">@i.tentheloai</option>
                    }
                </select>
                @Html.ValidationMessageFor(model => model.idtheloai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.idalbum, "idalbum", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                <select name="idalbum">
                    @foreach (var i1 in ab)
                    {
                        <option value="@i1.idalbum">@i1.tenalbum</option>

                    }
                </select>
                @Html.ValidationMessageFor(model => model.idalbum, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.idplaylist, "idplaylist", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                <select name="idplaylist">
                    @foreach (var i2 in cs)
                    {
                        <option value="@i2.idplaylist">@i2.ten</option>
                    }
                </select>
                @Html.ValidationMessageFor(model => model.idplaylist, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.tenbaihat, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.tenbaihat, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.tenbaihat, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.casi, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.casi, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.casi, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="fl col-md-10">

        <div class="form-group">
            @Html.LabelFor(model => model.hinhbaihat, htmlAttributes: new { @class = "control-label col-md-5" })
            <div class="col-md-5">
                <input type="file" name="ImgBH" value="" />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.linkbaihat, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.TextBox("postedFile", "", new { type = "file" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<style>
    .fl {
        display: flex;
    }
</style>
