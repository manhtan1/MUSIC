@model MUSIC.Models.PLAYLIST

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>PLAYLIST</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ten)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ten)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.hinhnen)
        </dt>

        <dd>
            <img src=" @Html.DisplayFor(model => model.hinhnen)" width="300px;" alt="Alternate Text" />
